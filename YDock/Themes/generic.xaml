                        <Image x:Name="Image" Height="10" Source="/YDock;component/Resource/Image/AutoHide_White.png" LayoutTransform="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type view:AnchorHeaderControl}},Path=DataContext.Mode,Converter={StaticResource DockModeToTransformConverter}}"/>
                    </Border>
